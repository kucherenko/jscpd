{
  "name": "@jscpd/badge-reporter",
  "version": "4.0.1",
  "description": "Reporter for jscpd. Generate a badges with copy/paste level.",
  "keywords": [
    "jscpd",
    "cpd",
    "reporter",
    "jscpd-reporter"
  ],
  "author": "Andrey Kucherenko <kucherenko.andrey@gmail.com>",
  "homepage": "https://github.com/kucherenko/jscpd#readme",
  "license": "MIT",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.mts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./README.md": "./README.md"
  },
  "scripts": {
    "build": "tsup-node --dts",
    "dev": "nodemon",
    "test:dev": "vitest",
    "typecheck": "tsc",
    "cleanup": "rimraf ./dist .turbo"
  },
  "directories": {
    "src": "src",
    "test": "__tests__"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/kucherenko/jscpd.git"
  },
  "bugs": {
    "url": "https://github.com/kucherenko/jscpd/issues"
  },
  "dependencies": {
    "badgen": "^3.2.3",
    "colors": "^1.4.0",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@jscpd/core": "workspace:*",
    "@jscpd/finder": "workspace:*",
    "@jscpd/tsconfig": "workspace:*",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.2.0",
    "nodemon": "^3.1.4",
    "tsup": "^8.2.3",
    "vitest": "^2.0.5"
  }
}
